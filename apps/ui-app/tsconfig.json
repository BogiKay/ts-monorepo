{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./build",
    "rootDir": "./src",
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
  }
}